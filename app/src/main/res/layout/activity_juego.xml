<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal"
    tools:context=".Juego">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textviewNivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textAlignment="gravity"
                android:gravity="center"
                android:text=""
                android:background="@drawable/boton2"
                app:fontFamily="@font/luckiest_guy"
                android:textColor="#000000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                >

                <ImageView
                    android:id="@+id/iconoPuntuacion"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/completo"
                    android:layout_alignBottom ="@+id/puntuacion"
                    />

                <TextView
                    android:id="@+id/puntuacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/luckiest_guy"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/iconoPuntuacion"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="80dp"
                    />


                <ImageView
                    android:id="@+id/iconoReloj"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/reloj"
                    android:layout_alignLeft ="@+id/tiempo"
                    />

                <TextView
                    android:id="@+id/tiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/luckiest_guy"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_margin="20dp"
                    android:layout_toRightOf="@+id/iconoPuntuacion"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iconoErrores"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/errores"
                    android:layout_alignLeft ="@+id/errores"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:id="@+id/errores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/luckiest_guy"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/iconoErrores"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="100dp"
                    />

                <TextView
                    android:id="@+id/itemCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/luckiest_guy"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/iconoErrores"
                    android:layout_margin="20dp"
                    />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                >

            </RelativeLayout>

            <TextView
                android:id="@+id/textviewEtapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="gravity"
                android:gravity="center"
                android:text=""
                android:background="@drawable/boton1"
                app:fontFamily="@font/luckiest_guy"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/textoItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="gravity"
                android:gravity="center"
                android:text=""
                android:background="@drawable/board_item"
                app:fontFamily="@font/luckiest_guy"
                android:textColor="#000000"
                />

            <EditText
                android:id="@+id/textoRespuesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="5"
                />

            <Button
                android:id="@+id/btnConfirmNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/boton1"
                app:fontFamily="@font/luckiest_guy"
                android:text="Confirmar"
                android:textColor="#800000"
                />


        </LinearLayout>
    </ScrollView>

</LinearLayout>