<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal"
    tools:context="apps.ejemplo.horrografia.Etapa">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar etapa"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:textAlignment="center"
        app:fontFamily="@font/luckiest_guy"
        android:textColor="#FFFFFF"
        />
    <EditText
        android:id="@+id/descripcionEtapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gentium_book_basic_bold"
        android:hint="Descripción"
        />

    <EditText
        android:id="@+id/valorError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gentium_book_basic_bold"
        android:hint="Valor de error"
        android:inputType="numberDecimal"
         />

    <EditText
        android:id="@+id/valorPuntuacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gentium_book_basic_bold"
        android:hint="Valor de puntuación"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/erroresNoPermitidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gentium_book_basic_bold"
        android:hint="Número de errores no permitidos"
        android:inputType="number" />

    <EditText
        android:id="@+id/minutos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gentium_book_basic_bold"
        android:hint="Minutos"
        android:inputType="number" />

    <EditText
        android:id="@+id/numero_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gentium_book_basic_bold"
        android:hint="Número de items"
        android:inputType="number"
        />

    <Button
        android:id="@+id/btnRegistroEtapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar etapa"
        android:fontFamily="@font/luckiest_guy"
        android:background="@drawable/custom_button1"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        />

    <at.markushi.ui.CircleButton
        android:id="@+id/btnHome"
        android:layout_height="100dp"
        android:layout_width="100dp"
        app:cb_color="#2AF598"
        app:cb_pressedRingWidth="16dp"
        android:src="@drawable/ic_home_black_24dp"
        />


</LinearLayout>